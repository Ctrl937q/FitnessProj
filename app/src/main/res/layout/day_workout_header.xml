<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/vector_calendar"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_view_quantity_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/reg_font"
            android:textColor="@color/color_bnv_unchecked"
            android:layout_gravity="center"
            android:textSize="40sp" />

    </android.support.design.widget.CoordinatorLayout>


    <TextView
        android:id="@+id/text_view_all_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/reg_font"
        android:textColor="@color/color_bnv_unchecked"
        android:layout_marginTop="10dp"

        android:textSize="20dp" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_button_rest_day"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="11dp"
        android:paddingTop="11dp"
        android:paddingStart="12dp"
        android:fontFamily="@font/reg_font"
        android:paddingEnd="12dp"
        android:layout_marginBottom="20dp"
        fancy:fb_useSystemFont="false"
        android:textStyle="bold"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#ffffff"
        fancy:fb_focusColor="#ca838383"
        fancy:fb_textSize="10sp"
        fancy:fb_radius="7dp"
        fancy:fb_textColor="#000000" />
</LinearLayout>