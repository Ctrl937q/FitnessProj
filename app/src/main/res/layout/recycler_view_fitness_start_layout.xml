<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_recyclerView_start"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="7dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="11dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/image_view_recycler_view_start"
            android:src="@drawable/prepare_image"

            android:scaleType="centerCrop"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="190dp"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="15dp"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="PREPARE"
            android:maxLines="2"
            android:id="@+id/textViewFitnessStartLayout_1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewFitnessStartLayout_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LEARN MORE"
            android:textStyle="bold"
            android:textColor="#92ff3cff"
            android:textSize="12dp" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>