<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.loopeer.shadow.ShadowView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:shadowColor="#42000000"
                app:shadowMarginBottom="5dp"
                app:shadowRadius="8dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:id="@+id/relativeLayout2"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:background="@drawable/bg_info_start">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:src="@drawable/girl_bg_info_start"
                                android:scaleType="centerCrop"
                                android:layout_marginStart="58dp"
                                android:layout_alignParentBottom="true"
                                android:layout_height="wrap_content" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="20dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView_title_exercise_info_fragment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/reg_font"
                                    android:text="Ass | Legs  "
                                    android:textColor="@color/color_bnv_unchecked"
                                    android:textSize="17sp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="17dp"
                                    android:layout_marginEnd="5dp"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/vector_clock_black" />

                                    <TextView
                                        android:id="@+id/textView_training_info_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="4dp"
                                        android:fontFamily="@font/reg_font"
                                        android:textColor="@color/color_bnv_unchecked" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_marginTop="4dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/vector_lightning_black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:id="@+id/textViewCircuit_info_fragment"
                                        android:layout_height="wrap_content"
                                        android:text="4 circuits"
                                        android:layout_marginLeft="4dp"
                                        android:fontFamily="@font/reg_font"
                                        android:textColor="@color/color_bnv_unchecked" />

                                </LinearLayout>


                                <android.support.constraint.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="5dp">

                                </android.support.constraint.ConstraintLayout>

                            </LinearLayout>

                            <android.support.constraint.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="20dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="5dp"
                                    android:orientation="vertical"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintRight_toLeftOf="@+id/lllll"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:id="@+id/image_4_info"
                                        android:visibility="gone"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/image_four_training_need1" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:visibility="gone"
                                        android:id="@+id/image_5_info"
                                        android:layout_marginTop="3dp"
                                        android:src="@drawable/image_five_training_need1" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:visibility="gone"
                                        android:id="@+id/image_6_info"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:src="@drawable/image_six_training_need1" />

                                </LinearLayout>


                                <LinearLayout
                                    android:id="@+id/lllll"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:orientation="vertical"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:id="@+id/image_1_info"
                                        android:visibility="gone"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/image_one_training_need1" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/image_2_info"
                                        android:visibility="gone"

                                        android:layout_marginTop="3dp"
                                        android:src="@drawable/image_two_training_need1" />


                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:id="@+id/image_3_info"
                                        android:visibility="gone"

                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:src="@drawable/image_three_training_need1" />

                                </LinearLayout>


                            </android.support.constraint.ConstraintLayout>


                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>


            </com.loopeer.shadow.ShadowView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView_exercise_choose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="65dp"
                        android:nestedScrollingEnabled="false">

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff">

        <Button
            android:id="@+id/button_start_workout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/btn_start_workout"
            android:fontFamily="@font/reg_font"
            android:text="START WORKOUT"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>

</RelativeLayout>