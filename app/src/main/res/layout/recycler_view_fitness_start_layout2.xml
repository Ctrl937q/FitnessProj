<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/card_view_recyclerView_start_2"
        app:cardCornerRadius="8dp"
        app:cardElevation="7dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="11dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/image_view_fitness_start2"
                android:layout_margin="10dp"
                android:src="@drawable/light_bulb_vector"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/text_view_fitness_start_3"
                android:layout_marginStart="20dp"
                android:text="GLOSSARY"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/arrow_right_vector" />

            </LinearLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>