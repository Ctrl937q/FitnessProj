<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <com.loopeer.shadow.ShadowView
        android:id="@+id/shadow_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="5dp"
        android:foreground="?attr/selectableItemBackground"
        app:cornerRadius="8dp"
        app:shadowColor="@color/shadow_color"
        app:shadowMargin="7dp"
        app:shadowRadius="7dp">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_recyclerView_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_view_recycler_view_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/prepare_image" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewFitnessStartLayout_1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/reg_font"
                    android:maxLines="3"
                    android:textColor="#000000"
                    android:textSize="17sp" />


                <Button
                    android:id="@+id/fancy_button_start"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/medium_font"
                    android:layout_height="30dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:background="@drawable/btn_start_workout"
                    android:textColor="@color/color_bnv_unchecked"
                    />


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </com.loopeer.shadow.ShadowView>

</RelativeLayout>