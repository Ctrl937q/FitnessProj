            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:background="@drawable/bg_skinny_hacks_top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="45dp"
                android:orientation="vertical">

                <TextView
                    style="@style/MyTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/medium_font"
                    android:text="@string/food_time_when_to_eat"
                    android:textSize="20sp" />


                <TextView
                    style="@style/MyTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/reg_font"
                    android:justificationMode="inter_word"
                    android:text="@string/yep_skinny_hacks"
                    android:textSize="19sp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:background="@drawable/bg_skinny_hacks_top_2"
            android:orientation="vertical">

            <TextView
                style="@style/MyTextViewStyleForBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/medium_font"
                android:gravity="center"
                android:text="@string/breakfast_within_40_minutes_of_waking_up_high_protein"
                android:textSize="18sp" />

            <TextView
                style="@style/MyTextViewStyleForBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/medium_font"
                android:gravity="center"
                android:text="@string/snack_2_5_3_hours_later"
                android:textSize="18sp" />

            <TextView
                style="@style/MyTextViewStyleForBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/medium_font"
                android:gravity="center"
                android:text="@string/lunch_2_5_3_hours_later"
                android:textSize="18sp" />

            <TextView
                style="@style/MyTextViewStyleForBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/medium_font"
                android:gravity="center"
                android:text="@string/snack_2_5_3_hours_later"
                android:textSize="18sp" />

            <TextView
                style="@style/MyTextViewStyleForBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/medium_font"
                android:gravity="center"
                android:text="@string/dinner_2_5_3_hours_later"
                android:textSize="18sp" />

            <TextView
                style="@style/MyTextViewStyleForBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/medium_font"
                android:gravity="center"
                android:text="@string/light_snack_1_5_2_hours_later"
                android:textSize="18sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:background="@drawable/bg_ckinny_hacks_bot"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="45dp"
                android:orientation="vertical">


                <TextView
                    style="@style/MyTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/reg_font"
                    android:justificationMode="inter_word"
                    android:text="@string/this_pattern_is_so_easy_to_maintain_if_you_are_prepared_preparation_is_key_so_we_aren_t_left_starving_and_making_poor_choices_that_s_when_we_pull_up_to_convenient_stores_and_buy_packaged_foods_or_perhaps_make_an_even_worse_decision"
                    android:textSize="19sp" />


                <TextView
                    style="@style/MyTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/medium_font"
                    android:text="@string/tips"
                    android:textSize="20sp" />


                <TextView
                    style="@style/MyTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/reg_font"
                    android:justificationMode="inter_word"
                    android:text="@string/boil_several_eggs_at_once_and_store_for_hard_boiled_egg_snacks"
                    android:textSize="19sp" />

                <TextView
                    style="@style/MyTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/reg_font"
                    android:justificationMode="inter_word"
                    android:text="@string/chop_up_lots_of_veggies_and_pack_them_in_containers_in_fridge"
                    android:textSize="19sp" />

                <TextView
                    style="@style/MyTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/reg_font"
                    android:justificationMode="inter_word"
                    android:text="@string/have_salsas_hummus_mustards_etc_on_hand"
                    android:textSize="19sp" />

                <TextView
                    style="@style/MyTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/reg_font"
                    android:justificationMode="inter_word"
                    android:text="@string/make_small_snack_size_bags_of_almonds"
                    android:textSize="19sp" />


                <TextView
                    style="@style/MyTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/reg_font"
                    android:justificationMode="inter_word"
                    android:text="@string/trader_joes_has_great_pre_made_salads_but_we_suggest_ditching_the_dressing_included_and_using_fresh_lemon_and_a_drizzle_of_olive_oil"
                    android:textSize="19sp" />

                <TextView
                    style="@style/MyTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/reg_font"
                    android:justificationMode="inter_word"
                    android:text="@string/cook_several_chicken_breasts_at_a_time_and_cut_them_into_3_4_inch_slices_add_them_to_salads_almond_flour_tortillas_or_a_spinach_and_quinoa_bowl"
