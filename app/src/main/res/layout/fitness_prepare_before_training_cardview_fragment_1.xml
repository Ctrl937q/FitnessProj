<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.loopeer.shadow.ShadowView
        android:id="@+id/shadow_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="5dp"
        android:foreground="?attr/selectableItemBackground"
        app:cornerRadius="7dp"
        app:shadowColor="@color/shadow_color2"
        app:shadowMargin="10dp"
        app:shadowRadius="10dp">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/cardView_test"
            android:layout_height="wrap_content"
            app:cardCornerRadius="7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_test"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vector_heart" />

                <TextView
                    style="@style/MyTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/medium_font"
                    android:text="@string/stretch"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/MyTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:justificationMode="inter_word"
                    android:text="@string/text_12ewds" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/vector_heart" />

                <TextView
                    style="@style/MyTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/medium_font"
                    android:text="@string/get_outside"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/MyTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="7dp"
                    android:justificationMode="inter_word"
                    android:text="@string/if_weather_permits_outdoor_activities_of_any_sort_tennis_volleyball_beach_games_dog_walking_hiking_cycling_swimming" />


            </LinearLayout>


        </android.support.v7.widget.CardView>


    </com.loopeer.shadow.ShadowView>

</LinearLayout>