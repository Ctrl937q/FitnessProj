<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_view_add_grocery_list_recipes_info"
        android:layout_gravity="center"
        android:src="@drawable/vector_recipes_info_add" />

    <TextView
        android:layout_width="wrap_content"
        android:text="4 GG crackers"
        android:id="@+id/textView_recipes_info_item"
        android:textColor="@color/color_bnv_unchecked"
        android:fontFamily="@font/reg_font"
        android:textSize="20sp"
        android:layout_marginStart="15dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />


</LinearLayout>