<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp">

        <com.example.tituh.fitnessproj.helpers.SquareImageView
            android:id="@+id/image_view_recipe_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:layout_gravity="center"
            android:minHeight="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/background_item_recipe_test" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/button_on_recipe"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_recipes_transparent"
                android:fontFamily="@font/medium_font"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:textColor="@color/color_bnv_unchecked"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
