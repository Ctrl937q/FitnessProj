<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/background_start"
    android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <com.dd.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:sl_shadowColor="@color/color_shadow_level">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_warm_up"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/color_background_card_view_gloccary"
                android:layout_margin="5dp"
                app:cardCornerRadius="7dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/image_view_warm_up"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/vector_warm_up_pink" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="WarmUp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </com.dd.ShadowLayout>

        <com.dd.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:sl_shadowColor="@color/color_shadow_level">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_workouts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/color_background_card_view_gloccary"
                app:cardCornerRadius="7dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:id="@+id/image_view_workouts"
                        android:src="@drawable/vector_workouts_pink" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="8dp"

                        android:gravity="center"
                        android:text="Workouts" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


        </com.dd.ShadowLayout>


        <com.dd.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:sl_shadowColor="@color/color_shadow_level">



            <android.support.v7.widget.CardView
                android:id="@+id/card_view_stretching"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/color_background_card_view_gloccary"
                app:cardCornerRadius="7dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/image_view_stretching"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/vector_stretching_pink" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="8dp"

                        android:gravity="center"
                        android:text="Stretching" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


        </com.dd.ShadowLayout>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container_glossary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>